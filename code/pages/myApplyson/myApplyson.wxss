/* pages/postDetail/postDetail.wxss */
.postUser{padding:14px 15px 10px;color:rgba(0, 0, 0, 0.589);font-size:13px;position:relative}
.postUser:after{content:" ";position:absolute;left:0;bottom:0;right:0;height:1px;border-bottom:1rpx solid #e5e5e5;color:#e5e5e5;left:15px}

.weui-media-box-1{padding:15px;position:relative}
.weui-media-box-1:before{content:" ";position:absolute;left:0;top:0;right:0;height:1px;border-top:1rpx solid #e5e5e5;color:#e5e5e5;left:15px}
.weui-media-box-1:first-child:before{display:none}
.weui-media-box-1__title{font-weight:800;font-size:17px;width:auto;overflow:hidden;text-overflow:ellipsis;word-wrap:break-word;word-break:break-all;border-bottom:1rpx solid #e5e5e5;left:15px}
.weui-media-box-1__desc{font:"微软雅黑";font-size:14px;line-height:1.2;overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-box-orient:vertical}
.weui-media-box-1__info{margin-top:15px;padding-bottom:5px;font-size:13px;color:#919191;line-height:1em;list-style:none;overflow:hidden}
.weui-media-box-1__info__meta{float:left;padding-right:1em}
.weui-media-box-1__info__meta_extra{padding-left:1em;border-left:1px solid #919191}
.weui-media-box-1__title_in-text{margin-bottom:8px}
.weui-media-box-1_appmsg{display:-webkit-box;display:-webkit-flex;display:flex;-webkit-box-align:center;-webkit-align-items:center;align-items:center}
.weui-media-box-1__thumb{width:100%;height:100%;vertical-align:top}
.weui-media-box-1__hd_in-appmsg{margin-right:.8em;width:60px;height:60px;line-height:60px;text-align:center}
.weui-media-box-1__bd_in-appmsg{-webkit-box-flex:1;-webkit-flex:1;flex:1;min-width:0}
.weui-media-box-1_small-appmsg{padding:0}



.weui-panel-1{background-color:#fff;margin-top:10px;position:relative;margin-bottom:150rpx;overflow:hidden;}
.weui-panel-1:first-child{margin-top:0}
.weui-panel-1:before{top:0;border-top:1rpx solid #e5e5e5}
.weui-panel-1:after{content:" ";position:fixed;bottom:400rpx;left:0;right:0;height:1px;color:#e5e5e5}
.weui-panel-1:before{content:" ";position:absolute;left:0;right:0;height:1px;color:#e5e5e5}
.weui-panel-1:after{position:relative; bottom:0;border-bottom:1rpx solid #e5e5e5}
.weui-panel-1__hd{padding:14px 15px 10px;color:#999;font-size:13px;position:relative}
.weui-panel-1__hd:after{content:" ";position:absolute;left:0;bottom:0;right:0;height:1px;border-bottom:1rpx solid #e5e5e5;color:#e5e5e5;left:15px}


.weui-panel-2{background-color:#fff;margin-top:10px;position:fixed;margin-bottom:0;overflow:hidden;}
.weui-panel-2:first-child{margin-top:0}
.weui-panel-2:before{top:0;border-top:1rpx solid #e5e5e5}
.weui-panel-2:after{content:" ";position:fixed;bottom:400rpx;left:0;right:0;height:1px;color:#e5e5e5}
.weui-panel-2:before{content:" ";position:absolute;left:0;right:0;height:1px;color:#e5e5e5}
.weui-panel-2:after{position:relative; bottom:0;border-bottom:1rpx solid #e5e5e5}
.weui-panel-2__hd{padding:14px 15px 10px;color:#999;font-size:13px;position:relative}
.weui-panel-2__hd:after{content:" ";position:absolute;left:0;bottom:0;right:0;height:1px;border-bottom:1rpx solid #e5e5e5;color:#e5e5e5;left:15px}

.apply{
  position:fixed;
  bottom:0;
  display:flex;
  width:100%;
  justify-content:center;
}
