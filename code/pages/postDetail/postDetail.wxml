<!--pages/postDetail/postDetail.wxml-->

  <scroll-view class='sv' scroll-y='true' style='z-index: -1;'>
    <view class = 'half_1'>
      <image class = 'img' mode = "widthFix" src = "https://group.tttaaabbbccc.club/{{postImg}}"  />
      <view class='title'>
        <image class='title_img' style="width:50rpx;height:50rpx" src = "../../image/title.png"></image>
        <text  class='title_text' > {{title}}</text>
      </view>

      <view class='tags'>
        <i-tag class="i-tags" color="blue" wx:if = "{{vie}}" wx:for = "{{sp}}" >
          {{tagsDict[item]}}
        </i-tag>
      </view>
      <view class='date-num'>
        <image class='date_img' style="width:50rpx;height:50rpx" src = "../../image/date.png"></image>
        <text  class='date_text' style='color:gray;text-align: center;margin-left:10rpx; position: absolute;'> {{ddl}}</text>
        <image class='num_image' style="width:50rpx;height:50rpx" src = "../../image/Pnum.png"></image>
        <text  class='num_text' style='color:gray;text-align: center;margin-left:10rpx; position: absolute;'> {{acceptedNum}}/{{requestNum}}</text>
      </view>
    </view>
      <view style="height:20rpx;background-color:#D9D9D9">
    </view>
    <view class='half_2' >
      <view class='useinfo'>
        <image class = 'userimg' src = "{{userimg}}" />
        <text  style='color:gray;text-align: center;margin-left:20rpx; position: absolute;'> {{username}}</text>
      </view>
      <view class = 'postDetail'>
        <text class = "detail">{{postDetail}}</text>
      </view>
    </view>
 </scroll-view>
 <view class='button'>
    <button class="backhome" catchtap='goToHome'> 返回首页  </button>
    <button class='apply' bindtap='applyFor'>  申请招募   </button>
 </view>

 <i-toast id="toast" />

